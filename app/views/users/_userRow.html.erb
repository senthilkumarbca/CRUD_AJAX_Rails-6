<tr id="user_<%= u.id %>">
  <td><%= u.name %></td>
  <td><%= u.email %></td>
  <td><%= u.address %></td>
  <td><%= u.contact %></td>
  <td>
    <div class="btn-group dropdown">
      <button type="button" class="dots" data-bs-toggle="dropdown" aria-expanded="false"></button>
      <div class=".3-dots"></div>
      <ul class="dropdown-menu">
        <li><%= link_to 'Show', u, class: 'dropdown-item' %></li>
        <li><%= link_to 'Edit', edit_user_path(u), class: 'dropdown-item', data: { bs_toggle: 'modal', bs_target: '#editUserModal', remote: true } %></li>
        <li><%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %></li>
      </ul>
    </div>
    </div>
  </td>
</tr>