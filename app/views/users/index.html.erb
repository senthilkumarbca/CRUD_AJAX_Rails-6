<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: 'btn btn-info my-3' %>
<table class="table table-striped">
  <thead class="bg-info">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Contact</th>
      <th><%= link_to 'New User', new_user_path, style: 'text-decoration:none;' %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.contact %></td>
        <td>
          <div class="btn-group dropdown">
            <button type="button" class="dots" data-bs-toggle="dropdown" aria-expanded="false"></button>
            <div class=".3-dots"></div>
            <ul class="dropdown-menu">
              <li><%= link_to 'Show', user, class: 'dropdown-item' %></li>
              <li><%= link_to 'Edit', edit_user_path(user), class: 'dropdown-item' %></li>
              <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %></li>
            </ul>
          </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


