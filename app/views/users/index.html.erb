<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: 'btn btn-info my-3', data: { bs_toggle: 'modal', bs_target: '#exampleModal', remote: true } %>
<table class="table table-striped">
  <thead class="bg-info">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Contact</th>
      <th><%= link_to 'New User', new_user_path, style: 'text-decoration:none;',data: { bs_toggle: 'modal', bs_target: '#exampleModal', remote: true }  %></th>
    </tr>
  </thead>

  <tbody id="usersTable">
    <% @users.each do |user| %>
      <%= render 'userRow', u: user %>
    <% end %>
  </tbody>
</table>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New User</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="userForm">

      </div>
    </div>
  </div>
</div>
<br>
<hr>



